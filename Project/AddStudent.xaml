<Window x:Class="Project.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Add Student" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="txtFullName" Margin="0,5"/>

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail" Margin="0,5"/>

            <TextBlock Text="Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="pbPassword" Margin="0,5"/>

            <TextBlock Text="Class:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbClass" Margin="0,5" DisplayMemberPath="ClassName"/>

            <Button Content="Add Student" Margin="0,20,0,0" Width="100" Click="AddStudent_Click"/>
            <TextBlock x:Name="txtStatus" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

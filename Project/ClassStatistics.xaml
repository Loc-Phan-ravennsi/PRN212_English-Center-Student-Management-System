<Window x:Class="Project.ClassStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="ClassStatistics" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Class Statistics"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2E3B55"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

        <!-- Data Grid for Student Scores -->
        <DataGrid Grid.Row="1"
                  x:Name="dgStatistics"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Margin="0,10,0,10"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentID}" Width="*"/>
                <DataGridTextColumn Header="Student Name" Binding="{Binding StudentName}" Width="*"/>
                <DataGridTextColumn Header="Listening" Binding="{Binding Listening}" Width="*"/>
                <DataGridTextColumn Header="Speaking" Binding="{Binding Speaking}" Width="*"/>
                <DataGridTextColumn Header="Reading" Binding="{Binding Reading}" Width="*"/>
                <DataGridTextColumn Header="Writing" Binding="{Binding Writing}" Width="*"/>
                <DataGridTextColumn Header="Average" Binding="{Binding Average}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Chart -->
        
    </Grid>
</Window>

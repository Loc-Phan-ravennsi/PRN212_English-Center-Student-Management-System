<UserControl x:Class="Project.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Main Content -->
        <Grid>
            <StackPanel>
                <TextBlock Text="Danh sách lớp học" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

                <DataGrid x:Name="dgClassList" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" Width="50"/>
                        <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="200"/>
                        <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="200"/>
                        <DataGridTextColumn Header="No. Students" Binding="{Binding StudentCount}" Width="80"/>
                        <DataGridTemplateColumn Header="Action" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="btnDetails" Content="Chi tiết" Tag="{Binding ClassId}" Click="btnDetails_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

<Window x:Class="Project.MainDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Dashboard" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Sidebar -->
        <Grid Background="#2D2D30" Width="200" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock Text="MENU" Foreground="White" FontSize="16" Margin="0,10,0,20"/>
                
                <Button Content="Dashboard" Margin="0,5" Padding="10" Background="Transparent" Foreground="White"/>
                <Button Content="Statistics" Margin="0,5" Padding="10" Background="Transparent" Foreground="White"/>
                <Button Content="Log Out" Margin="0,20,0,0" Padding="10" Background="DarkRed" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="210,10,10,10">
            <StackPanel>
                <TextBlock Text="Danh sách lớp học" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <DataGrid x:Name="dgClassList" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã lớp" Binding="{Binding ClassID}" Width="100"/>
                        <DataGridTextColumn Header="Tên lớp" Binding="{Binding ClassName}" Width="200"/>
                        <DataGridTextColumn Header="Giáo viên phụ trách" Binding="{Binding TeacherName}" Width="200"/>
                        <DataGridTextColumn Header="Sĩ số" Binding="{Binding StudentCount}" Width="80"/>
                        <DataGridTemplateColumn Header="Hành động" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Chi tiết"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

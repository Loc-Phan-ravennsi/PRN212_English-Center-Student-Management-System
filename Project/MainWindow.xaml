<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Project"
        Title="Main Window" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Sidebar -->
        <Grid Background="#2D2D30" Width="200" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock Text="MENU" Foreground="White" FontSize="16" Margin="0,10,0,20"/>

                <Button Content="Dashboard" Margin="0,5" Padding="10" Click="Dashboard_Click"/>
                <Button Content="Add New Student" Margin="0,5" Padding="10" Click="Add_Click"/>
                <Button Content="Add Student To Class" Margin="0,5" Padding="10" Click="AddToClass_Click"/>

                <Button Content="Add Score" Margin="0,5" Padding="10" Click="AddScore_Click"/>
                <Button Content="Delete Student" Margin="0,5" Padding="10" Click="DeleteStudent_Click"/>
                <Button Content="Statistics" Margin="0,5" Padding="10" Click="Statistics_Click"/>

                <Button Content="Log Out" Margin="0,20,0,0" Padding="10" Background="DarkRed" Foreground="White" Click="Logout_Click"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ContentControl x:Name="MainContent" Margin="210,10,10,10"/>
    </Grid>
</Window>

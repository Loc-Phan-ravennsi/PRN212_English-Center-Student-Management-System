<Window x:Class="Project.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="StudentWindow" Height="600" Width="900">
    <Grid>
        <!-- Sidebar -->
        <Grid Background="#2D2D30" Width="200" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock Text="MENU" Foreground="White" FontSize="16" Margin="0,10,0,20"/>
                <TextBlock x:Name="tbGreeting" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>
                <!-- You can add more buttons later if needed -->
                <Button Content="Log Out" Margin="0,20,0,0" Padding="10" Background="DarkRed" Foreground="White" Click="Logout_Click"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Margin="210,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Personal Info -->
                <RowDefinition Height="*"/>
                <!-- Scores + Feedback -->
                <RowDefinition Height="Auto"/>
                <!-- Save Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Student Profile"
                       FontSize="28"
                       FontWeight="Bold"
                       Grid.Row="0"
                       Margin="0,0,0,20" />

            <!-- Personal Info -->
            <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,10,0,20" Width="500">
                <ComboBox x:Name="cbWeek" Width="200" Height="25" Margin="0,0,0,10" SelectionChanged="cbWeek_SelectionChanged"/>
                <TextBlock Text="Full Name:" FontWeight="Bold" />
                <TextBox x:Name="txtFullName" IsReadOnly="True"/>

                <TextBlock Text="Student ID:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="txtStudentId" IsReadOnly="True" />
            </StackPanel>

            <!-- Score and Feedback Section -->
            <Grid Grid.Row="2" Width="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Scores -->
                <TextBlock Text="Scores (0 - 9):" FontSize="20" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,20">
                    <StackPanel Margin="10">
                        <TextBlock Text="Listening"/>
                        <TextBox x:Name="txtListening" Width="100" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Speaking"/>
                        <TextBox x:Name="txtSpeaking" Width="100" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Reading"/>
                        <TextBox x:Name="txtReading" Width="100" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Writing"/>
                        <TextBox x:Name="txtWriting" Width="100" IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>

                <!-- Feedback -->
                <TextBlock Text="Teacher Feedback:" FontSize="20" FontWeight="Bold" Grid.Row="3" Margin="0,10,0,5"/>
                <TextBox x:Name="txtFeedback"
                         Grid.Row="4"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         Height="150"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,10,0,10"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
